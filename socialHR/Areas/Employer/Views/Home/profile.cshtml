@{
    ViewBag.Title = "profile";
    Layout = "~/Areas/Employer/Views/Shared/_Layout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<style>
    #cover_img {
        width: 100%;
        height: 200px;
    }

    .cover {
        background-image: url("http://colorfully.eu/wp-content/uploads/2012/10/empty-road-highway-with-fog-facebook-cover.jpg");
        background-position: top;
        background-repeat: no-repeat;
        background-attachment: fixed;
        width: 800px;
        height: 200px;
        position: relative;
        padding-left: 0;
        margin-left: 15px;
    }
    .tab {
        padding: 7px 5px;
        background-color: white;
        text-decoration: none;
        display: inline-block;
        border: 1px solid white;
    }
        .tab:hover {
            text-decoration: none;
            background-color: lightgray;
        }
        .tab:active{
            background-color: lightgray;
        }
    .nav-tabs{
        text-align: end;
        position: absolute;
        left: 150px;
        bottom: 0;
    }
    #avatar{
        height: 150px;
        width: 150px;
        position: absolute;
        left: 0;
        bottom: 0;
        radial-gradient: 50%;
        border: 1px solid white; 
    }
    .body{
        max-width: 800px;
        margin: auto;
        background: white;
    }
</style>
<div class="body">
    <div class="row">

        <div class="cover">
            <img id="avatar" src="~/Assets/img/avatar.jpg" />

            <ul class="nav nav-tabs">
                <li class="active"><a class="tab" data-toggle="tab" href="#profile">Thông tin cá nhân</a></li>
                <li><a class="tab" data-toggle="tab" href="#info_company">Thông tin công ty</a></li>
                <li><a class="tab" data-toggle="tab" href="#setting">Cài đặt tài khoản</a></li>
            </ul>



        </div>
    </div>
    <div class="tab-content">
        <div id="profile" class="tab-pane fade in active">
            <h3>Thông tin cá nhân</h3>
